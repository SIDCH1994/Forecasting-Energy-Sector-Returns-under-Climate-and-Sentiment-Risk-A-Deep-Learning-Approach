





import sys, subprocess, importlib
def ensure(p):
    try: importlib.import_module(p)
    except: subprocess.check_call([sys.executable, "-m", "pip", "install", p])

for p in ["pandas", "yfinance"]:
    ensure(p)

import pandas as pd
import yfinance as yf
from pathlib import Path

# Output folder
ROOT = Path.cwd()
DATA_CLEAN = ROOT / "data_clean"
DATA_CLEAN.mkdir(parents=True, exist_ok=True)
print("Data will be saved to:", DATA_CLEAN)


# Possible Yahoo Finance tickers for EUA futures / certificates
EUA_TICKERS = [
    "CO2.L",      # ICE EU Allowance Futures (London)
    "EUA=F",      # Alternate
    "CO2=F",      # Alternate
    "ECF=F",      # Alternate
]

eua_df = None
used_ticker = None

for t in EUA_TICKERS:
    try:
        df = yf.download(t, start="2013-01-01", progress=False)
        if df is not None and not df.empty:
            eua_df = df.copy()
            used_ticker = t
            break
    except Exception as e:
        print(f"Failed for {t}: {e}")

if eua_df is None:
    raise SystemExit(
        "No EUA price data found. Try a different ticker (search 'EU Carbon' on Yahoo Finance)."
    )

eua_df = eua_df.reset_index().rename(columns={"Date": "date"})
eua_df["ticker"] = used_ticker

# Keep only essential columns
eua_clean = eua_df[["date", "Close", "ticker"]].rename(columns={"Close": "price_eur"})
eua_clean = eua_clean.dropna().sort_values("date").reset_index(drop=True)

# Save daily prices
eua_out = DATA_CLEAN / "carbon_price_eua_daily.csv"
eua_clean.to_csv(eua_out, index=False)

print(f"âœ… Saved daily EU ETS EUA prices to: {eua_out}")
print(f"Ticker used: {used_ticker}")
display(eua_clean.head(10))







